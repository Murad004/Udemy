@model Udemy.WebUI.Models.AdminViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</head>

<style>
    .Processes {
        font-size: 1.3em;
        color: white;
        text-decoration: none;
        border-radius: 7px;
        transition: 0.2s;
    }


        .Processes:hover {
            color: black;
            background-color: white;
            transition: 0.2s;
        }

        .pr2{
        font-size: 1.3em;
        color: white;
        text-decoration: none;
        border-radius: 7px;
        transition: 0.2s;
        }

        .pr2:hover{
        color: orange;
        transition: 0.2s;
        }
</style>

<body>

    <div class="row">
        <div class="col-2">
            <div class="mt-4 ms-3" style="height:90vh;width:40vh;border:2px solid #362FD9;border-radius:20px;background-color:#362FD9;">
                <img src="~/Images/iconadmin.png" class="d-inline-block ms-4 mb-2" width="34" height="34" style="border-radius:50%;" />
                <h1 class="text-center d-inline-block ms-2 pt-4" style="font-weight:bold;font-size:1.5em;color:white;">Udemy Admin</h1>
                <hr style="color:white;" />
                <ul style="list-style:none;" class="w-100 mt-5">

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="AdminManager">Admin Manager</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="Users">User Manager</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="CategoryList">Categories</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="CourseList">Courses</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="NotificationList">Course Notifications</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="NotificationList">Role List</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="NotificationList">Complaints</a>
                    </li>

                    <li class="w-100 mt-2">
                        <a class="Processes p-2" asp-controller="Admin" asp-action="NotificationList">Messages</a>
                    </li>
                    

                    <li class="w-100 mt-3">
                        <a class="Processes pr2 p-2" asp-controller="Admin" asp-action="NotificationList">Help</a>
                    </li>
                    <li class="w-100 mt-2">
                        <a class="Processes pr2 p-2" asp-controller="Account" asp-action="LogOut">My Profile</a>
                    </li>
                    <li class="w-100 mt-2">
                        <a class="Processes pr2 p-2" asp-controller="Account" asp-action="LogOut">Log Out</a>
                    </li>

                </ul>
            </div>
        </div>
        <div class="col">
            @RenderBody()
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</body>

</html>
