@model Udemy.WebUI.Models.AdminViewModel;






@{
    Layout = "~/Views/Shared/_LayoutForAdmin.cshtml";
}




<div class="mt-4 text-center" style="height:90vh;width:150vh;border:1px solid black;border-radius:20px;">
    <div class="mt-3">
        <input type="text" class="w-50 mx-auto p-2 ps-3 text-start" style="border:1px solid #362FD9;border-radius:25px;font-size:1.3em;font-weight:500;color:darkgray;" placeholder="Search for User" />
        <ul style="list-style:none;" class="mt-3 w-100">
            @foreach (var user in Model.Users)
            {


                <li class="mt-2 mx-auto">
                    <div class="w-100 row pt-2" style="border:1px solid #362FD9;border-radius:25px;">
                        <div class="col-1">
                            <img src="@user.ImageUrl" class="d-inline-block ms-1" width="60" height="60" style="border-radius:50%;" />

                        </div>
                        <div class="col">
                            <div class="d-inline-block ms-2 text-start">
                                <h1 style="font-size:1.3em;font-weight:500;" class="ms-1 mt-1">
                                    @user.FirstName @user.LastName
                                </h1>
                                <p class="mt-1">
                                    @user.Email
                                </p>
                            </div>
                        </div>

                    </div>
                </li>
            }
        </ul>
    </div>
</div>